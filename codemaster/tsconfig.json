{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "downlevelIteration": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/api/uploadQuestion/upload.js", "components/forms/TournamentForm.jsx", "app/questionGeneration/uploadTournament.js", "app/api/submitForm/submit.js", "app/utils/Processing/processForm.js", "components/tables/LeaderboardsTable.tsx", "components/misc/leaderboardsRow.tsx", "components/pages/LeaderboardsPage.tsx", "cypress/e2e/spec.cy.ks"],
  "exclude": ["node_modules"]
}
